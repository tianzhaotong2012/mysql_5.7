[client]
port            = 5100
socket          = /home/mysql/mysql/tmp/mysql.sock

[mysqld]

!include /home/mysql/mysql/etc/mysqld.cnf

port            = 5100
basedir         = /home/mysql/mysql
socket          = /home/mysql/mysql/tmp/mysql.sock
pid-file        = /home/mysql/mysql/var/mysql.pid
datadir         = /home/mysql/mysql/var/


tmpdir          = /home/mysql/mysql/tmp/
slave-load-tmpdir   = /home/mysql/mysql/tmp/
# skip lever
skip-name-resolve
skip-symbolic-links
skip-external-locking
skip-slave-start

#thread level


table_open_cache = 128

#############connect############
back_log                 = 50
max_connections  = 1000
max_connect_errors       = 10000
#open_files_limit         = 10240

##############timeout###########
connect-timeout          = 10
wait-timeout             = 800
interactive-timeout      = 800
slave-net-timeout        = 60
net_read_timeout         = 30
net_write_timeout        = 60
net_retry_count          = 10
net_buffer_length        = 16384
max_allowed_packet       = 64M

################# cache #############
thread_stack             = 192K
thread_cache_size        = 100

# qcache settings
query_cache_type         = 0
query_cache_size         = 0M
#query_cache_size         = 128M
#query_cache_limit        = 2M
#query_cache_min_res_unit = 2K

# default settings
# time zone
default-time-zone        = system
character-set-server     = utf8
default-storage-engine   = InnoDB

# tmp & heap 
tmp_table_size           = 128M
max_heap_table_size      = 128M

log-bin                  = mysql-bin
log-bin-index            = mysql-bin.index
relay-log                = relay-log
relay_log_index          = relay-log.index

# warning & error log
log-warnings             = 1
log-error       = /home/mysql/mysql/log/mysql.err

log-output               = FILE

# slow query log
slow_query_log           = 1
long-query-time          = 1
slow_query_log_file      = /home/mysql/mysql/log/slow.log
#log-queries-not-using-indexes
#log-slow-slave-statements

general_log      = 1
general_log_file         = /home/mysql/mysql/log/mysql.log
max_binlog_size          = 128M
max_relay_log_size       = 128M

# if use auto-ex, set to 0
relay-log-purge          = 1

# max binlog keeps days
expire_logs_days         = 7

binlog_cache_size        = 1M

# replication
replicate-wild-ignore-table     = mysql.%
replicate-wild-ignore-table     = test.%
# slave_skip_errors=all

key_buffer_size                 = 128M
sort_buffer_size                = 2M
read_buffer_size                = 2M
join_buffer_size                = 8M
read_rnd_buffer_size            = 8M
bulk_insert_buffer_size         = 64M
myisam_sort_buffer_size         = 64M
myisam_max_sort_file_size       = 128M
myisam_repair_threads           = 1

group_concat_max_len            = 64K

transaction_isolation           = REPEATABLE-READ

innodb_file_per_table
#############mysql5.5new################
innodb_file_format = Barracuda
########################################

innodb_buffer_pool_size  = 128M
innodb_data_home_dir            = /home/mysql/mysql/var/

################mysql5.5new############
innodb_read_io_threads          = 8
innodb_write_io_threads         = 8
innodb_purge_threads            = 1
########################################

innodb_thread_concurrency       = 16
innodb_flush_log_at_trx_commit  = 2

innodb_log_buffer_size          = 16M
innodb_log_file_size            = 128M
innodb_log_files_in_group       = 2
innodb_log_group_home_dir       = /home/mysql/mysql/var/

innodb_max_dirty_pages_pct      = 90
innodb_lock_wait_timeout        = 50
#innodb_flush_method            = O_DSYNC


################mysql5.5 new#####################
innodb_buffer_pool_instances    = 16
innodb_change_buffering         = all
innodb_adaptive_flushing        = on
innodb_io_capacity              = 2000
innodb_old_blocks_time          = 1000
innodb_stats_on_metadata        = 0
#################################################

old-passwords                   = 0

[mysqldump]
quick
max_allowed_packet              = 64M

[mysql]
no-auto-rehash
default-character-set           = utf8
connect-timeout                 = 3

[myisamchk]
key_buffer_size = 256M
sort_buffer_size = 256M
read_buffer = 2M
write_buffer = 2M

[mysqlhotcopy]
interactive-timeout